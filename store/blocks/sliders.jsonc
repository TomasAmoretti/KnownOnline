{
    "slider-layout#home": {
        "children": [
            "image#slider-home-1",
            "image#slider-home-2",
            "image#slider-home-3"
        ],
        "props": {
            "autoplay": {
                "timeout": 5000,
                "stopOnHover": false
            },
            "infinite": true,
            "itemsPerPage": {
                "desktop": 1,
                "tablet": 1
            },
            "showPaginationDots": "always",
            "showNavigationArrows": "always",
            "fullWidth": false,
            "blockClass": "slider-home"
        }
    },
    "image#slider-home-1": {
        "props": {
            "src": "https://dummyimage.com/1920x400/000/fff",
            "link": {
                "url": "/#"
            },
            "blockClass": "slider-home"
        }
    },
    "image#slider-home-2": {
